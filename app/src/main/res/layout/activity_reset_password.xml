<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.detrening.detrening.Authentication.resetPassword"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="@drawable/theme">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logob"
            android:background="@drawable/shape_logo"
            />

        <TextView
            android:id="@+id/keteranganReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/logo"
            android:layout_alignRight="@+id/logo"
            android:layout_below="@+id/logo"
            android:layout_marginTop="14dp"
            android:text="Masukkan Email akun yang ingin direset"
            android:textColor="@android:color/black" />


        <EditText
            android:id="@+id/emailReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/keteranganReset"
            android:layout_marginTop="18dp"
            android:autofillHints="masukkan email anda"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:shadowColor="@android:color/white"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailReset"
            android:layout_marginTop="16dp"
            android:text="Reset Password"
            android:backgroundTint="@color/kuningorg"
            android:onClick="fungsiReset"/>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
