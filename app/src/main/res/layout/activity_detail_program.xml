<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.detrening.detrening.DetailProgram"
    android:background="@drawable/theme">

    <android.support.v7.widget.CardView
        android:id="@+id/crV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:backgroundTint="@color/navy">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/giphy"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linProg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crV"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_margin="3dp">
        <TextView
            android:id="@+id/judulProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Gerakan"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/deskripsiProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai dengan tangan..."
            android:padding="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/skipProg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Next"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/cyan"
        android:clickable="true"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>
